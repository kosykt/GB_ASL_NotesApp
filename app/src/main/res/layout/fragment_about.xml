<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutAboutFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TopTextView_center"
    android:orientation="vertical"
    android:clickable="true"
    app:layoutDescription="@xml/fragment_about_scene"
    tools:context=".ui.settings.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/textSizeInterface" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>